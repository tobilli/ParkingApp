@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
    
}


<div id="sign_up">
    <div class="signup">
        <form id="registerForm" id="form_id" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="signup_1">

                <h3> Your details are needed to sign up for an account</h3>
            </div>

            <div class="signup_2">
                <h2>Sign Up</h2>
                @*<br>*@

                <div class="form-floating">
                    <input asp-for="Input.FullName" placeholder="Full Name" autocomplete="FullName" aria-required="true" />
                    @*<label asp-for="Input.FullName"></label>*@
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Email" placeholder="Email" autocomplete="email" aria-required="true" />
                    @* <label asp-for="Input.Email"></label>*@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" placeholder="Phone Number" autocomplete="phone_no" aria-required="true" />
                    @* <label asp-for="Input.PhoneNumber"></label>*@
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" placeholder="Password" autocomplete="new-password" aria-required="true" />
                    @*<label asp-for="Input.Password"></label>*@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                    @* <label asp-for="Input.ConfirmPassword"></label>*@
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    @*<label asp-for="Input.User"></label>*@
                    <select asp-for="Input.Role" class="" asp-items='new SelectList(roles,"Id","Name")'>
                        <option value="" disabled selected hidden>Select User</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <div>
                    <button id="registerSubmit" type="submit" id="btn_id">Sign Up</button>
                    <p>Already Have Account ? &nbsp; <a asp-area="Identity" asp-page="/Account/Login">Sign In</a> </p>
                </div>

            </div>
        </form>
    </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
