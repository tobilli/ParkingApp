@model ParkingApp.Models.Booking

@{
    ViewData["Title"] = "Create";
    var Spaces = (List<Space>)ViewData["spaces"];
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="License_No" class="control-label"></label>
                <input asp-for="License_No" class="form-control" />
                <span asp-validation-for="License_No" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle_Type" class="control-label"></label>
                <input asp-for="Vehicle_Type" class="form-control" />
                <span asp-validation-for="Vehicle_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_Arrival" class="control-label"></label>
                <input asp-for="Date_Arrival" class="form-control" />
                <span asp-validation-for="Date_Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_Depature" class="control-label"></label>
                <input asp-for="Date_Depature" class="form-control" />
                <span asp-validation-for="Date_Depature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"> Area</label>
               <select asp-for="Area" class="form-control" asp-items='new SelectList(Spaces, "Area","Address")'></select>
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
