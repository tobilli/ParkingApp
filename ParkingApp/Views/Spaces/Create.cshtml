                                <span asp-validation-for="Open_Time" class="text-danger"></span>
                            </div>
                    <div class=" rentEarn_reg1_time1 text-center">
                        <label asp-for="Close_Time" class="control-label fw-bold">Close PM</label>
                                <input asp-for="Close_Time" type="time"  class="timepm" />
                                 <span asp-validation-for="Close_Time" class="text-danger"></span>
