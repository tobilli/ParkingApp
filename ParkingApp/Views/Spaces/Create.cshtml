                <div class="rentEarn_Address pt-4">
                            <label asp-for="Address" class="control-label fw-bold"></label>
                            <input asp-for="Address" class="" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
